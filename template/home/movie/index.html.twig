{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="col-12 my-4">
            <div class="row">
                <div class="col-6">
                    <img class="card-img" src="{{ trailer.image }}" alt="Card image" style="max-height: 500px">
                </div>
                <div class="col-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ trailer.title }}</h5>
                            <p class="card-text">{{ trailer.description }}</p>
                            <p class="card-text">Published: {{ trailer.pubDate|date('Y-m-d')  }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
